<div class="col-md-4 col-md-offset-4">
  <h2>编辑讨论版</h2>

  <hr>
  <%= form_for @group do |f| %>
    <div class="form-group">
      <%= f.label "标题" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "叙述" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", disable_with: "Submitting", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
